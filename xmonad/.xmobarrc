Config { overrideRedirect = False
       , font     = "xft:iosevka-9"
    --    , bgColor  = "#5f5f5f"
       , bgColor  = "#000000"
       , fgColor  = "#f8f8f2"
       , position = Top
    --    , border   = BottomB
       , hideOnStart = False
       , allDesktops = True
       , persistent = True 
       , commands = [ Run Cpu
                        [ "-L", "3"
                        , "-H", "50"
                        , "--high"  , "red"
                        , "--normal", "green"
                        ] 10
                    , Run Alsa "default" "Master"
                        [ "--template", "<volumestatus>"
                        , "--suffix"  , "True"
                        , "--"
                        , "--on", ""
                        ]
                    , Run DiskU [("/", "Root: <free>")] ["-L", "5", "-H", "50"] 20
                    , Run Memory ["--template", "Mem: <used>/<total>"] 10
                    , Run Swap [] 10
                    , Run Date "%a %Y-%m-%d <fc=#8be9fd>%H:%M</fc>" "date" 10
                    , Run XMonadLog
                    ]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = "%XMonadLog% }{ %alsa:default:Master% | %cpu% | %disku% | %memory% | %swap% | %date% "
       }
